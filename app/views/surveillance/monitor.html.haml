%p{:id => 'heading'} Surveillance
.flash
  - flash.each do |name, msg|
    %br
    = content_tag :div, msg, id: "flash_#{name}"
    %br
- if @repo_list
  %b User:
  = @user_login
  %br
  %br
  - if @repo_list.length > 0
    %b Repo Count:
    = @repo_list.count
    %br
    %br
    = content_tag :div, '', id: 'repo_chart', data: {highchart_x_data: @highchart_x_data, highchart_y_data: @highchart_y_data}
    %br
  - else
    No existing repository!