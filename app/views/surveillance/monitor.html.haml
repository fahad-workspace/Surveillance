%p{:id => 'heading'} Surveillance
.flash
  - flash.each do |name, msg|
    %br
    = content_tag :div, msg, id: "flash_#{name}"
    %br
- if @repo_list
  %b User:
  = @user
  %br
  %br
  - if @repo_list.length > 0
    %b Repo Count:
    = @repo_list.count
    %br
    %br
    = content_tag :div, '', id: 'repo_chart', height: 500, data: {repo: @repo_list}
    %br
  - else
    No existing repository!